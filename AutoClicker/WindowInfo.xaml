<Window x:Class="AutoClicker.WindowInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoClicker"
        AllowsTransparency="True" WindowStyle="None" ShowInTaskbar="False"
        Title="WindowInfo" Top="0" Left="0">
    <Window.Background>
        <SolidColorBrush></SolidColorBrush>
    </Window.Background>
    <Grid>
        <StackPanel>
            <Label x:Name="Active" Content="Active:" FontFamily="Franklin Gothic Medium" FontSize="16" Foreground="White" Background="#FF2B2B2B" HorizontalAlignment="Left" Margin="0,2,0,0"></Label>
            <Label x:Name="Key" Content="Key:" FontFamily="Franklin Gothic Medium" FontSize="16" Foreground="White" Background="#FF2B2B2B" HorizontalAlignment="Left" Margin="0,2,0,0"/>
            <Label x:Name="Time" Content="Time:" FontFamily="Franklin Gothic Medium" FontSize="16" Foreground="White" Background="#FF2B2B2B" HorizontalAlignment="Left" Margin="0,2,0,0"></Label>
            <Label x:Name="Mousebutton" Content="Mouse button:" FontFamily="Franklin Gothic Medium" FontSize="16" Foreground="White" Background="#FF2B2B2B" HorizontalAlignment="Left" Margin="0,2,0,0"></Label>

        </StackPanel>
    </Grid>
</Window>
